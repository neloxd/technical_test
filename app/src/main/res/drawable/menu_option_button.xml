<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/divider" android:state_enabled="false">
        <shape>
            <solid android:color="@color/divider" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:color="@color/bc_color" android:state_focused="true"  android:state_activated="true">
        <shape>
            <solid android:color="@color/bc_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:color="@color/bc_color_pressed"  android:state_pressed="true">
        <shape>
            <solid android:color="@color/bc_color_pressed" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:color="@color/bc_color_pressed" android:state_enabled="true">
        <shape>
            <solid android:color="@color/bc_color_pressed" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:color="@color/bc_color_pressed">
        <shape>
            <solid android:color="@color/bc_color_pressed" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>